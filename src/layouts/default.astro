---
import BaseHead from "$components/BaseHead.astro";
import MainLayout from "$components/MainLayout.astro";
import type { GhostSettings } from "$/types.d.ts";
export type Props = {
  content?: {
    title: string;
    description: string;
  };
  bodyClass?: string;
  mainClass?: string;
  settings: GhostSettings;
};

const {
  content,
  settings,
  bodyClass = "",
  mainClass = "",
} = Astro.props as Props;
const ghostAccentColor = settings.accent_color;
---

<!DOCTYPE html>
<html lang="en" data-color-scheme="light">
  <head>
    <BaseHead
      title={content.title ? `${settings.title} | ${content.title}` : settings.title}
      description={content.description}
      {settings} />
  </head>
  <MainLayout {settings} {bodyClass} {mainClass}>
    <slot />
  </MainLayout>
</html>

<style
  lang="scss"
  global
  define:vars={{ "ghost-accent-color": ghostAccentColor }}
>
  @import "../styles/reset.scss";
  @import "../styles/app.scss";
  @mixin mq-sm {
    @media only screen and (min-width: 36em) {
      @content;
    }
  }
  @mixin mq-md {
    @media only screen and (min-width: 48em) {
      @content;
    }
  }
  @mixin mq-lg {
    @media only screen and (min-width: 62em) {
      @content;
    }
  }
  @mixin mq-xl {
    @media only screen and (min-width: 75em) {
      @content;
    }
  }
</style>
